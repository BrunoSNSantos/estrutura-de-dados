{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-folder",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "mkdir -p ${fileDirname}/output && gcc -g ${fileDirname}/*.c -o ${fileDirname}/output/main"
      ],
      "problemMatcher": ["$gcc"]
    }
  ]
}
