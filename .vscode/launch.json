{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug C (pasta atual)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/output/main",
      "cwd": "${fileDirname}",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,

      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "build-folder",

      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
